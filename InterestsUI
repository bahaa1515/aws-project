    <script>
        const interestsContainer = document.getElementById('interests-container');
        const nextBtn = document.getElementById('next-btn');
        const options = document.querySelectorAll('.option:not(.unclickable)');

        interestsContainer.addEventListener('scroll', function() {
            const scrollPosition = interestsContainer.scrollTop + interestsContainer.clientHeight;
            const scrollHeight = interestsContainer.scrollHeight;

            if (scrollPosition >= scrollHeight - 10) {
                nextBtn.classList.add('active');
                nextBtn.disabled = false;
            } else {
                nextBtn.classList.remove('active');
                nextBtn.disabled = true;
            }
        });

        options.forEach(option => {
            option.addEventListener('click', function() {
                this.classList.toggle('selected');
            });
        });
    </script>
